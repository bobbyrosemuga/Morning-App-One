<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textStyle="bold|italic"
        android:gravity="center"
        android:textColor="#E91E63"
        android:textSize="40sp"
        android:id="@+id/mTvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Android Programming" />

    <TextView

        android:id="@+id/mTvcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="This is super blahblaf blah and nyur f nyef yeffkgdfaghdcawgdfuwdvg
"
        android:textSize="20sp" />

    <Button
        android:id="@+id/mBtnReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:backgroundTint="#136FB8"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="#101B25"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/mBtnTWO"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="#871D97"
        android:text="Button"
        android:textAllCaps="false"
        android:textColor="#39431B"
        android:textSize="30sp"
        android:textStyle="italic" />
</LinearLayout>
